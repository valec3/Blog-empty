---
import Image from "astro/components/Image.astro"
import HeroImage from "./../../assets/bg-hero.jpg"
import CafeImage from "./../../assets/coffe-cup.png"
import BeansCoffeeImage from "./../../assets/beans-coffee.webp"
import CurveArrowImage from "./../../assets/curve-arrow-right.png"
---
<section class="relative w-full h-[35%] sm:h-[50%] md:h-[60%] lg:h-[80%] xl:h-[85%] 2xl:h-[90%] overflow-hidden flex justify-center items-center ">
    <Image
        src={HeroImage}
        alt="Hero Image"
        class="w-full h-full object-cover absolute inset-0 z-10 "
        loading="eager"
        priority={true}
    />
    <Image 
        src={BeansCoffeeImage}
        alt="Beans Coffee Image"
        class="size-16 md:size-[200px] 2xl:size-[400px] object-contain absolute right-10 top-0 z-20 rotate-180"
        loading="eager"

    />
    <Image 
        src={BeansCoffeeImage}
        alt="Beans Coffee Image"
        class="size-16 md:size-[200px] 2xl:size-[400px] object-contain absolute bottom-0 left-10 z-20"
        loading="eager"

    />
    <Image    
        src={CurveArrowImage}
        alt="Curve Arrow Image"
        class="parallax-item size-16 md:size-[100px] 2xl:size-[150px] object-contain absolute left-[45%] transform -translate-x-1/2  z-20 rotate-[110deg] top-[55%]"
        loading="eager"
    />

    <div class="z-20 w-full max-w-2xl lg:max-w-4xl xl:max-w-5xl relative h-[90%] px-4 flex">
        <Image 
            src={CafeImage}
            alt="Cafe Image"
            class="parallax-item size-[150px] sm:size-[200px] md:size-[250px] lg:size-[300px] xl:size-[370px] 2xl:size-[420px] object-contain absolute bottom-0 right-10 md:right-0 z-20"
            loading="eager"
        />
        <div class="mt-[10%] xl:mt-10 parallax-item ">
            <h2 class="text-3xl sm:text-[2.5rem] md:text-[3rem] lg:text-[4rem] xl:text-[4.5rem] 2xl:text-[5rem] flex-col hidden md:flex">
                <span class="font-grand-hotel text">Cada taza</span>
                <span class="font-bold">Una historia que contar</span>
                <span class="font-grand-hotel text">Un momento para recordar</span>
            </h2>
            <h2 class="text-3xl sm:text-[2.5rem] md:text-[3rem] lg:text-[4rem] xl:text-[4.5rem] 2xl:text-[5rem] flex-col flex md:hidden">
                <span class="font-grand-hotel text">Tu café favorito</span>
                <span class="font-bold">Preparado con pasión</span>
                <span class="font-grand-hotel text">Servido con amor</span>
            </h2>
        </div>
    </div>
</section>
<!-- text-3xl md:text-[3rem] xl:text-[4rem] 2xl:text-[5rem] -->

<script>
    document.addEventListener('mousemove',parallax);
    function parallax(){
        const $itemsParallax = document.querySelectorAll('.parallax-item');
        $itemsParallax.forEach(item => {
            const speed = 2.5;
            const x = (window.innerWidth - event.pageX * speed) / 100;
            const y = (window.innerHeight - event.pageY * speed) / 100;
            item.style.transform = `translateX(${x}px) translateY(${y}px)`;
        });
    }

</script>