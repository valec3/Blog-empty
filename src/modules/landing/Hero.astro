---
import Image from "astro/components/Image.astro"
import HeroImage from "./../../assets/bg-hero.jpg"
import CafeImage from "./../../assets/coffe-cup.png"
import BeansCoffeeImage from "./../../assets/beans-coffee.webp"
import CurveArrowImage from "./../../assets/curve-arrow-right.png"
---
<section class="relative w-full h-[33%] md:h-[45%] xl:h-[750px] overflow-hidden flex justify-center items-center ">
    <Image
        src={HeroImage}
        alt="Hero Image"
        class="w-full h-full object-cover absolute inset-0 z-10 "
        width="1000"
        height="500"
    />
    <Image 
        src={BeansCoffeeImage}
        alt="Beans Coffee Image"
        class="size-16 md:size-[200px] 2xl:size-[400px] object-contain absolute right-10 top-0 z-20 rotate-180"
        width="960"
        height="825"
    />
    <Image 
        src={BeansCoffeeImage}
        alt="Beans Coffee Image"
        class="size-16 md:size-[200px] 2xl:size-[400px] object-contain absolute bottom-0 left-10 z-20"
        width="960"
        height="825"
    />
    <Image    
        src={CurveArrowImage}
        alt="Curve Arrow Image"
        class="size-16 md:size-[100px] 2xl:size-[150px] object-contain absolute left-1/2 transform -translate-x-1/2 top-1/2 z-20 rotate-[110deg]"
        width="960"
        height="825"
    />

    <div class="z-20 w-full max-w-5xl relative h-[90%] px-4 flex">
        <Image 
            src={CafeImage}
            alt="Cafe Image"
            class="size-[150px] md:size-[250px] xl:size-[300px] 2xl:size-[420px] object-contain absolute bottom-0 right-10 md:right-0 z-20"
            width="960"
            height="825"
        />
        <div class="mt-[10%] xl:mt-0">
            <h2 class="text-3xl md:text-[3rem] xl:text-[4rem] 2xl:text-[5rem] flex-col hidden md:flex">
                <span class="font-grand-hotel text">Cada taza</span>
                <span class="font-bold">Una historia que contar</span>
                <span class="font-grand-hotel text">Un momento para recordar</span>
            </h2>
            <h2 class="text-3xl md:text-[3rem] xl:text-[4rem] 2xl:text-[5rem] flex-col flex md:hidden">
                <span class="font-grand-hotel text">Tu café favorito</span>
                <span class="font-bold">Preparado con pasión</span>
                <span class="font-grand-hotel text">Servido con amor</span>
            </h2>
        </div>
    </div>
</section>
